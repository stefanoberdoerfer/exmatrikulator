<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1">
  <display-name>Exmatrikulator</display-name>

  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- UNCOMMENT FOR MORE VIEW DEBUG MESSAGES
  <context-param>
    <param-name>javax.faces.PROJECT_STAGE</param-name>
    <param-value>Development</param-value>
  </context-param>
  -->

  <welcome-file-list>
    <welcome-file>login.xhtml</welcome-file>
  </welcome-file-list>

  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>

  <context-param>
    <param-name>primefaces.THEME</param-name>
    <param-value>exmatrikulator</param-value>
  </context-param>

  <context-param>
    <param-name>primefaces.UPLOADER</param-name>
    <param-value>commons</param-value>
  </context-param>

  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>de.unibremen.opensores.webapp.filter.LoginFilter</filter-class>
  </filter>

  <filter>
    <filter-name>CourseFilter</filter-name>
    <filter-class>de.unibremen.opensores.webapp.filter.CourseFilter</filter-class>
  </filter>

  <filter>
    <filter-name>NoStudentsFilter</filter-name>
    <filter-class>de.unibremen.opensores.webapp.filter.NoStudentsFilter</filter-class>
  </filter>

  <filter>
    <filter-name>NoCacheFilter</filter-name>
    <filter-class>de.unibremen.opensores.webapp.filter.NoCacheFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>NoCacheFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CourseFilter</filter-name>
    <url-pattern>/tutorialsGroups/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CourseFilter</filter-name>
    <url-pattern>/grading/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CourseFilter</filter-name>
    <url-pattern>/grades/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CourseFilter</filter-name>
    <url-pattern>/participants/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CourseFilter</filter-name>
    <url-pattern>/settings/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/course/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/participants/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/grading/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/grades/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/profile/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/unregistered/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>NoStudentsFilter</filter-name>
    <url-pattern>/grading/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>NoStudentsFilter</filter-name>
    <url-pattern>/settings/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>PrimeFaces FileUpload Filter</filter-name>
    <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PrimeFaces FileUpload Filter</filter-name>
    <servlet-name>Faces Servlet</servlet-name>
  </filter-mapping>

  <error-page>
    <error-code>400</error-code>
    <location>/WEB-INF/errorpages/400.xhtml</location>
  </error-page>

  <error-page>
    <error-code>401</error-code>
    <location>/WEB-INF/errorpages/401.xhtml</location>
  </error-page>

  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/errorpages/403.xhtml</location>
  </error-page>

  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/errorpages/404.xhtml</location>
  </error-page>

  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/errorpages/500.xhtml</location>
  </error-page>
</web-app>
